<center><h1>Api de Google Maps:</h1></center>
<div id="map"></div>
<script async
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCyrJBOXgl69tGc1EXJXsOu3gAqt5g2J4A&callback=initMap">
</script>
<script>
  const coord = {lat:20.433333 ,lng: -90.216667};
  const mapDiv =document.getElementById("map");
  let map;
  let marker;
function initMap(){
 map = new google.maps.Map(mapDiv, {
  center: coord,
  zoom: 8,
 });
  marker = new google.maps.Marker({
    position: coord,
    map: map
  });
}</script>



